<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             x:Class="Grocery.App.Views.RegisterView"
             x:DataType="vm:RegistrationViewModel"
             Title="Register">
    <StackLayout Padding="20" VerticalOptions="Center">
        <Label Text="Register" FontSize="24" HorizontalOptions="Center" />
        <Entry Placeholder="Name" Text="{Binding Name}"
               Margin="10"/>
        <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" 
               Margin="10"/>
        <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True" 
               Margin="10"/>
        <Button Text="Registreer" Command="{Binding RegisterUserCommand}" 
                Margin="10"/>
        <Button Text="Terug naar login" Command="{Binding GoToLoginCommand}" 
                Margin="10"/>
        <Label Text="{Binding RegistrationMessage}" TextColor="#ac99EA" />
    </StackLayout>
</ContentPage>